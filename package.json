    "@coinbase/onchainkit": "^0.38.19",
    "@tanstack/react-query": "^5.59.20",
    "framer-motion": "^11.11.17",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.5.5",
    "@rainbow-me/rainbowkit": "^2.1.7"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^22.9.0",
