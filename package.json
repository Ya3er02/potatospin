{
  "name": "potato-spin-farcaster",
  "version": "2.1.0",
  "private": true,
  "description": "Potato Spin - Farcaster Mini App on Base Blockchain (Security Enhanced)",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.js --network baseSepolia",
